{
  "name": "Old Twitter Layout (2022)",
  "description": "A new extension that returns old Twitter's look.",
  "version": "1.0.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "scripts/background.js"
  },
  "permissions": [
    "storage",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://*.twitter.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "layouts/home/index.html",
        "layouts/home/style.css",
        "/images/logo32.png",
        "/fonts/rosetta.woff"
      ],
      "matches": [
        "*://*.twitter.com/*"
      ]
    }
  ],
  "declarative_net_request" : {
    "rule_resources" : [{
      "id": "ruleset",
      "enabled": true,
      "path": "ruleset.json"
    }]
  },
  "icons": {
    "16": "/images/logo16.png",
    "32": "/images/logo32.png",
    "48": "/images/logo48.png",
    "128": "/images/logo128.png"
  },
  "action": {
    "default_icon": {
      "16": "/images/logo16.png",
      "32": "/images/logo32.png",
      "48": "/images/logo48.png",
      "128": "/images/logo128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["scripts/config.js", "scripts/apis.js", "scripts/content.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://twitter.com/home"],
      "js": ["libraries/viewer.min.js", "libraries/twemoji.min.js", "layouts/home/script.js"],
      "css": ["libraries/viewer.min.css"],
      "run_at": "document_idle"
    }
  ]
}